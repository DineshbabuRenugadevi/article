<div class="container">
    
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render "shared/errors", obj: @book %>
            <%= form_with(model: @book , class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Book" %> 
                    </div>
                </div>

                <div class="form-group row">
                <%= f.label :description, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 5, class: "form-control shadow rounded", placeholder: "Description" %> 
                    </div>
                </div>

                <div class="form-group row">
                <%= f.label :price, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :price, class: "form-control shadow rounded", placeholder: "Price of the Book" %> 
                    </div>
                </div>

                <div class="form-group row">
                <%= f.label :count, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                    <%= f.number_field :count, class: "form-control shadow rounded", placeholder: "Book Count" %> 
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>  
                </div>

            <% end %>
        </div>
        <div class="mb-3">
            <%= link_to "[ Cancel and Return Back to Book Listing Page ]" , books_path, class: "text-info" %>
        </div>
    </div>
</div>