
<div id="page-content">
  <h2 class="text-center mt-4"><%= @book.title %></h2>
    <div class="container">
        <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    by <%= @book.user.username if @book.user %></br>
                    <%= link_to gravatar_for(@book.user), user_path(@book.user) %>
                </div>
                <div class="card-body">
                    <div class="card-text text-left"><b> Description:</b><%= simple_format(@book.description) %></div>
                    <div class="card-text text-left"><b>Price:</b><%= format("%.2f" , "#{@book.price}") %> â‚¹</div>
                    <div class="card-text text-left"><b>Stock: </b><%= pluralize(@book.count, "book") %></div>
                    <% if logged_in? && (@book.user == current_user || current_user.admin?)  %>
                        <%= link_to "Edit", edit_book_path(@book), class: "btn btn-outline-info" %>
                        <%= link_to "Delete", book_path(@book), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
                    <% end %>
                </div>
                <div class="card-footer text-muted">
                    <small>Created <%= time_ago_in_words(@book.created_at) %> ago, 
                    edited <%= time_ago_in_words(@book.updated_at) %> ago</small>
                </div>
            </div>
            <div class="row justify-content-md-center">
                <%= link_to "[ Back to Book Listing Page ]" , books_path, class: "text-info" %>
            </div>
        </div>
        </div>
    </div>
    </div>
</div>









